{% extends 'adminbase.html.twig' %}

{% block title %}Interview{% endblock %}

{% block body %}
    <h1>Interview</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ interview.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ interview.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ interview.description }}</td>
            </tr>
            <tr>
                <th>Video_link</th>
                <td><a href="{{ interview.videoLink }}"> {{ interview.videoLink }}</a></td>
            </tr>
            <tr>
                <th>Video</th>
                <td><iframe width="400" height="200" src="{{  interview.videoLink }}" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen></iframe>
                </td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ interview.weight }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ interview.createdAt|date('d-m-Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ interview.createdAt ? interview.createdAt |date('d-m-Y H:i:s') : '' }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('interview_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('interview_edit', {'id': interview.id}) }}" class ="btn btn-warning">edit</a>

    {{ include('admin/interview/_delete_form.html.twig') }}
{% endblock %}
