{% extends 'adminbase.html.twig' %}

{% block title %}GalleryImage{% endblock %}

{% block body %}
    <h1>GalleryImage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery_image.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(gallery_image.image) }}"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gallery_image.description }}</td>
            </tr>
            <tr>
                <th>Gallery</th>
                <td>{{ gallery_image.gallery.title }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ gallery_image.createdAt ? gallery_image.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ gallery_image.updatedAt ? gallery_image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('gallery_image_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('gallery_image_edit', {'id': gallery_image.id}) }}" class ="btn btn-warning">edit</a>

    {{ include('admin/gallery_image/_delete_form.html.twig') }}
{% endblock %}
